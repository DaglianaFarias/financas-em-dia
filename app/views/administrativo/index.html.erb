
<div class="pt-4">
  <div class="row row-cols-1 row-cols-md-3 g-3 mb-4">
    <div class="col">
      <div class="card border-0 shadow-sm h-100 text-center">
        <div class="card-body">
          <h5 class="card-title text-success">
            <i class="fa-solid fa-money-bill-wave me-2"></i>Receitas
          </h5>
          <h2 class="fw-semibold text-success">
            R$ <%= number_to_currency(@total_receitas, unit: "", separator: ",", delimiter: ".", precision: 2) %>
          </h2>
        </div>
      </div>
    </div>

    <div class="col">
      <div class="card border-0 shadow-sm h-100 text-center">
        <div class="card-body">
          <h5 class="card-title text-danger">
            <i class="fa-solid fa-arrow-down me-2"></i>Despesas
          </h5>
          <h2 class="fw-semibold text-danger">
            R$ <%= number_to_currency(500, unit: "", separator: ",", delimiter: ".", precision: 2) %>
          </h2>
        </div>
      </div>
    </div>

    <div class="col">
      <div class="card border-0 shadow-sm h-100 text-center">
        <div class="card-body">
          <h5 class="card-title text-primary">
            <i class="fa-solid fa-piggy-bank me-2"></i>Saldo Atual
          </h5>
          <h2 class="fw-semibold text-primary">
            R$ <%= number_to_currency(500, unit: "", separator: ",", delimiter: ".", precision: 2) %>
          </h2>
        </div>
      </div>
    </div>
  </div>

  <!-- Situação Financeira Atual -->
  <%= render 'despesas/card_resumo_financeiro', ultimas_despesas_lancadas: @ultimas_despesas_lancadas %>

  <!-- Lançamentos e Categorias -->
  <div class="row row-cols-1 row-cols-md-2 g-3 mb-3">
    <div class="col">
      <%= render 'despesas/gastos_por_categoria', ultimas_contas_lancadas: @contas_cadastradas %>
    </div>
    <div class="col">
      <%= render 'despesas/ultimos_lancamentos', ultimas_despesas_lancadas: @ultimas_despesas_lancadas %>
    </div>
  </div>

  <!-- Categoria de Contas e Gráfico -->
  <div class="row row-cols-1 row-cols-md-2 g-3 mb-3">
    <div class="col">
      <%= render 'despesas/categoria_contas', ultimas_contas_lancadas: @contas_cadastradas %>
    </div>
    <div class="col">
      <div class="card border-0 shadow-sm h-100">
        <div class="card-body">
          <h5 class="card-title">
            <i class="fa-solid fa-chart-pie me-2 text-primary"></i>
            Distribuição do Orçamento
          </h5>
          <%= pie_chart @dados_orcamento, height: "300px", colors: ["#4caf50", "#2196f3", "#ff9800", "#f44336", "#9c27b0"] %>
        </div>
      </div>
    </div>
  </div>
</div>
