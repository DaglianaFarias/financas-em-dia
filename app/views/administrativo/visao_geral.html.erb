<div class="pt-4">
  <div class="row row-cols-1 row-cols-md-3 g-3 mb-4 justify-content-center">
    <div class="col">
      <div class="card border-0 shadow-sm text-center">
        <div class="card-body p-3">
          <h5 class="card-title text-success small">
            <i class="fa-solid fa-money-bill-wave me-2"></i>Receitas
          </h5>
          <h2 class="fw-semibold text-success" style="font-size: 1.5rem;">
            R$ <%= number_to_currency(@total_receitas, unit: "", separator: ",", delimiter: ".", precision: 2) %>
          </h2>
        </div>
      </div>
    </div>

    <div class="col">
      <div class="card border-0 shadow-sm text-center">
        <div class="card-body p-3">
          <h5 class="card-title text-danger small">
            <i class="fa-solid fa-arrow-down me-2"></i>Despesas
          </h5>
          <h2 class="fw-semibold text-danger" style="font-size: 1.5rem;">
            R$ <%= number_to_currency(500, unit: "", separator: ",", delimiter: ".", precision: 2) %>
          </h2>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <%= simple_form_for :filtrar_periodo, url: root_path, method: :get, html: { class: "row row-cols-lg-auto g-3 align-items-end" } do |f| %>
      <div class="">
        <%= f.input :mes_ano,
                    label: 'Filtrar por período',
                    collection: opcoes_mes_ano,
                    prompt: "Selecione o mês/ano",
                    input_html: { class: "form-select" } %>
      </div>
    
      <div class="mb-3">
        <%= f.button :submit, "Filtrar", class: "btn btn-success w-100" %>
      </div>
    <% end %>
  </div>

  <%= render 'despesas/card_resumo_financeiro', ultimas_despesas_lancadas: @ultimas_despesas_lancadas %>

  <div class="row row-cols-1 row-cols-md-2 g-3 mb-3">
    <div class="col">
      <%= render 'despesas/gastos_por_categoria', ultimas_contas_lancadas: @contas_cadastradas %>
    </div>
    <div class="col">
      <%= render 'despesas/ultimos_lancamentos', ultimas_despesas_lancadas: @ultimas_despesas_lancadas %>
    </div>
  </div>

  <div class="row row-cols-1 row-cols-md-2 g-3 mb-3">
    <div class="col">
      <%= render 'despesas/categoria_contas', ultimas_contas_lancadas: @contas_cadastradas %>
    </div>
    <div class="col">
      <div class="card border-0 shadow-sm h-100">
        <div class="card-body">
          <h5 class="card-title">
            <i class="fa-solid fa-chart-pie me-2 text-primary"></i>
            Distribuição do Orçamento
          </h5>
          <%= pie_chart @dados_orcamento, height: "300px", colors: ["#4caf50", "#2196f3", "#ff9800", "#f44336", "#9c27b0"] %>
        </div>
      </div>
    </div>
  </div>
</div>
