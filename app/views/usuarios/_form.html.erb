
<%= simple_form_for(@usuario) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="card">
    <div class="card-body">
      <%= f.input :nome %>
      <div class="row">
        <div class="col-md-6">
          <%= f.input :email %>
        </div>
        <div class="col-md-6">
          <%= f.input :senha %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-6">
          <%= f.label :status, "Status" %>
          <%= f.select :status, Usuario.status.keys.map { |status| [status.humanize, status] }, {}, class: "form-control" %>
        </div>
        <div class="col-md-6">
          <%= f.label :perfil, "Perfil" %>
          <%= f.select :perfil, Usuario.perfis.keys.map { |status| [status.humanize, status] }, {}, class: "form-control" %>
        </div>
      </div><br>
      <div class="row">
        <div class="col-md-6">
          <%= f.input :receber_alerta %>
        </div>
      </div>
    </div>

    <div class="card-footer text-end">
      <%= link_to request.referer, class: "btn btn-outline-secondary d-inline-flex align-items-center" do %>
        <i class="fa-solid fa-arrow-left me-2"></i> Voltar
      <% end %>
      <%= f.button :submit, "Salvar", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
