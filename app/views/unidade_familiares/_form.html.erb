<%= simple_form_for(@unidade_familiar) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="card">
    <div class="card-body">
      <%= f.input :nome %>

      <div class="row">
        <div class="col-md-6">
          <%= f.input :descricao, label: 'DescriÃ§Ã£o' %>
        </div>

        <div class="col-md-6">
          <%= f.input :status, 
                      label: "Status", 
                      collection: UnidadeFamiliar.status.keys.map { |status| [status.humanize, status] }, 
                      prompt: "Selecione", 
                      input_html: { class: "form-select" } %>
        </div>
      </div>
    </div>

    <div class="card-footer text-end">
      <%= link_to request.referer || root_path, class: "btn btn-outline-secondary d-inline-flex align-items-center" do %>
        <i class="fa-solid fa-arrow-left me-2"></i> Voltar
      <% end %>
      <%= f.button :submit, "Salvar", class: 'btn btn-primary ms-2' %>
    </div>
  </div>
<% end %>
