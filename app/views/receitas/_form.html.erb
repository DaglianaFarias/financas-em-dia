
<%= simple_form_for(@receita) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="card">
    <div class="card-body">
      <%= f.hidden_field :usuario_id, value: params[:usuario_id] %>
      <%= f.input :descricao %>
      <div class="row">
        <div class="col-md-6">
          <%= f.input :valor %>
        </div>
        <div class="col-md-6">
          <%= f.input :dataEntrada, label: "Data de recebimento" %>
        </div>
      </div>
    </div>

    <div class="card-footer text-end">
      <%= link_to request.referer, class: "btn btn-outline-secondary btn-sm d-inline-flex align-items-center" do %>
        <i class="fa-solid fa-arrow-left me-2"></i> Voltar
      <% end %>
      <%= f.button :submit, "Salvar", class: 'btn btn-sm btn-primary' %>
    </div>
  </div>
<% end %>
