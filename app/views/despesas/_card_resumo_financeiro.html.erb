<div class="card shadow-sm border-0 mb-4">
  <div class="card-body">
    <h5 class="card-title mb-4 d-flex align-items-center">
      <i class="fa-solid fa-scale-balanced text-primary me-2"></i>
      Situação Financeira - <strong class="ms-1"><%= Date.today.strftime('%d/%m/%Y') %></strong>
    </h5>

    <div class="mb-3">
      <i class="fa-solid fa-wallet text-muted me-1"></i>
      <strong>Orçamento:</strong>
      R$ <%= number_to_currency(@total_contas_previstas || 0, unit: "", separator: ",", delimiter: ".", precision: 2) %>
      <i class="fa-solid fa-circle-question text-secondary ms-1"
        data-bs-toggle="tooltip"
        data-bs-placement="top"
        title="Soma das contas fixas e valores planejados para o mês.">
      </i>
    </div>

    <div class="mb-3">
      <i class="fa-solid fa-receipt text-muted me-1"></i>
      <strong>Gastos:</strong>
      R$ <%= number_to_currency(@despesa_total || 0, unit: "", separator: ",", delimiter: ".", precision: 2) %>
      <i class="fa-solid fa-circle-question text-secondary ms-1"
        data-bs-toggle="tooltip"
        data-bs-placement="top"
        title="Contas pendentes não são incluídas na soma.">
      </i>
    </div>

    <% valor_saldo = (@total_contas_previstas - @despesa_total) || 0 %>
    <% saldo_disponivel = number_to_currency(valor_saldo, unit: "", separator: ",", delimiter: ".", precision: 2) %>

    <div class="mb-3">
      <i class="fa-solid fa-piggy-bank text-muted me-1"></i>
      <strong>Saldo:</strong>
      <span class="<%= valor_saldo.positive? ? 'text-success' : 'text-danger' %>">
        R$ <%= saldo_disponivel %>
      </span>
    </div>

    <% utilizado = @total_contas_previstas.positive? ? ((@despesa_total / @total_contas_previstas.to_f) * 100).round : 0
       passou_orcamento = utilizado > 100

       cor_barra = if utilizado < 75
                     'bg-success'
                   elsif utilizado < 100
                     'bg-warning text-dark'
                   else
                     'bg-danger'
                   end
    %>

    <div class="mb-4">
      <strong><i class="fa-solid fa-chart-simple me-1"></i>Uso do Orçamento:</strong>
      <div class="progress mt-2" role="progressbar" aria-valuenow="<%= utilizado %>" aria-valuemin="0" aria-valuemax="100">
        <div class="progress-bar <%= cor_barra %>" style="width: <%= utilizado %>%">
          <%= utilizado %>%
        </div>
      </div>
    </div>

    <% if passou_orcamento %>
      <div class="alert alert-danger mt-3" role="alert">
        <i class="fa-solid fa-triangle-exclamation me-1"></i>
        Orçamento do mês ultrapassado.
      </div>
    <% end %>
  </div>
</div>
