<div class="card border-0 shadow-sm h-60">
  <div class="card-body overflow-auto">
    <div class="d-flex justify-content-between align-items-center mb-2">
      <div>
        <small class="text-muted">Total:
          <span class="badge rounded-pill bg-secondary">
            R$ <%= number_to_currency(@contas_pendentes.sum(&:valor) || 0, unit: "", separator: ",", delimiter: ".", precision: 2) %>
          </span>
        </small>
      </div>
      <%= link_to "Cadastrar conta", nova_conta_path, class: "btn btn-sm btn-outline-primary" %>
    </div>
    <hr>
    <div class="card-body d-flex align-items-center">
      <div class="me-3">
        <div class="bg-warning bg-opacity-25 rounded-circle d-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
          <i class="fa-solid fa-triangle-exclamation fa-2x text-warning"></i>
        </div>
      </div>
      <div>
        <h6 class="fw-semibold mb-0 text-dark"><%= @contas_pendentes.size || 0 %> contas</h6>
        <small class="text-muted">aguardando pagamento</small>
      </div>
    </div>   
  </div>
</div>