
<%= simple_form_for(@despesa) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.label :orcamento, "Categoria da despesa" %>
    <%= f.select :orcamento_id, options_for_select(descricao_orcamentos), {}, class: 'form-control' %>
    <%= f.select :forma_pagamento_id, options_for_select(formas_de_pagamento), {}, class: 'form-control' %>
    <%= f.input :descricao, label: 'Detalhes' %>
    <%= f.select :categoria, options_for_select(Despesa.categorias.keys.map { |categoria| [categoria.humanize, categoria] }),{}, class: 'form-control' %>

    <%= f.input :data_gasto %>
    <%= f.input :valor %>
    <%= f.input :status %>
    <%= f.input :quantidade_parcelas %>
    <%= f.input :parcela_atual %>
    <%= f.input :dia_vencimento %>
    <%= f.input :data_vencimento %>
    <%= f.input :alertar_vencimento %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
