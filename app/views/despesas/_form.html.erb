
<%= simple_form_for(@despesa) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="card">
    <div class="card-body">
      <div class="row">
        <% f.hidden_field :categoria, value: Despesa.categorias[:gastos] %>
        <div class="col-md-6">
          <%= f.label :orcamento, "Categoria da despesa" %>
          <%= f.select :orcamento_id, options_for_select(descricao_orcamentos), {}, class: 'form-control' %>
        </div>
        <div class="col-md-6">
          <%= f.label :descricao, "Detalhes" %>
          <%= f.input :descricao, label: false %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-4">
          <%= f.input :valor %>
        </div>
        <div class="col-md-4 mt-2">
          <%= f.label :forma_pagamento_id, "Forma de pagamento" %>
          <%= f.select :forma_pagamento_id, grouped_options_for_select(formas_de_pagamento), {}, class: 'form-control' %>
        </div>
        <div class="col-md-4">
          <%= f.input :data_gasto, label: "Data da compra" %>
        </div>
      </div>
    </div>

    <div class="card-footer text-end">
      <%= f.button :submit, "Salvar", class: 'btn btn-sm btn-primary' %>
    </div>
  </div>
<% end %>
